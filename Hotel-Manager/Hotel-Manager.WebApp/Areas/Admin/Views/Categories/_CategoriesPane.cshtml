@model TatBlog.WebApp.Areas.Admin.Models.CategoryFilterModel

<form asp-area="Admin"
      asp-controller="Categories"
      asp-action="Index"
      method="get"
      class="row gy-2 gx-3 align-items-center">

    <div class="col-auto">
        <label class="visually-hidden" asp-for="KeyWord"></label>

        <input type="text"
               class="form-control"
               asp-for="KeyWord"
               placeholder="Nhập từ khoá..." />
    </div>

    <div class="col-auto">
        <div class="form-check">
            <label class="form-check-label" asp-for="ShowOnMenu"></label>
            <input class="form-check-input" type="checkbox" asp-for="ShowOnMenu">
        </div>
    </div>

    <div class="col-auto">
        <button type="submit" class="btn btn-primary">
            Tìm/Lọc
        </button>

        <a asp-area="Admin"
           asp-controller="Categories"
           asp-action="Edit"
           class="btn btn-success">
            Thêm mới
        </a>

        <a asp-area="Admin"
           asp-controller="Categories"
           asp-action="Index" class="btn btn-outline-danger">
            Bỏ lọc
        </a>
    </div>

</form>