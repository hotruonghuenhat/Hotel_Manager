@model Post

@{
    var imageUrl = string.IsNullOrWhiteSpace(Model.ImageUrl) ? "/images/KhachSanA.jpg" : $"/{Model.ImageUrl}";
}
<article class="blog-entry mb-4">
    <div class="card">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@imageUrl"
                     class="card-img"
                     alt="@Model.Title" />
            </div>
            <div class="col-md-8">
                <div class="card-body">

                    
                    <h5 class="card-title">
                        @Model.Title
                    </h5>
                    <p class="card-text">
                        <small class="text-muted">
                            Chủ Khách Sạn :
                        </small>
                        <span class="text-primary">
                            <a class="text-decoration-none"
                               asp-controller="Blog"
                               asp-action="Author"
                               asp-route-slug="@Model.Author.UrlSlug">

                                @Model.Author.FullName
                            </a>
                        </span>
                        <small class="text-muted">
                            Loại :
                        </small>
                        <span class="text-primary">
                            <a class="text-decoration-none"
                               asp-controller="Blog"
                               asp-action="Category"
                               asp-route-slug="@Model.Category.UrlSlug">

                                @Model.Category.Name
                            </a>

                        </span>
                    </p>
                    <p class="card-text">
                        @Html.Raw(Model.ShortDescription)
                    </p>

                    
                    <div class="col-md-8">
                        <div class="text-end">
                            @Html.Raw(Model.Meta)
                        </div>
                    </div>
                </>

            </div>

        </div>
    </div>

</article>