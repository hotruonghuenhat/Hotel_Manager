@model IPagedList<Post>

@{
    var postQuery = (ViewBag.PostQuery as PostQuery) ?? new PostQuery();
    var actionName = "index";
    var slug = "";

    if (!string.IsNullOrWhiteSpace(postQuery.AuthorSlug)) {
        actionName = "Author";
    }
    else if (!string.IsNullOrWhiteSpace(postQuery.CategorySlug)) {
        actionName = "Category";
    }
    else if (!string.IsNullOrWhiteSpace(postQuery.TagSlug)) {
        actionName = "Tag";
    }
}

@if (Model.PageCount > 1) {
    <div class="text-center my-4">
        @if (Model.HasPreviousPage) {
            <a asp-area=""
       asp-controller="Blog"
       asp-action="@actionName"
       asp-route-slug="@slug"
       asp-route-k="@postQuery.KeyWord"
       asp-route-p="@(Model.PageNumber - 1)"
       asp-route-ps="@Model.PageSize"
               class="btn btn-info">
                Trang trước
            </a>
        }
        else {
            <button type="button"
                    class="btn btn-outline-secondary"
                    disabled>
                Trang trước
            </button>
        }

        @if (Model.HasNextPage) {
            <a asp-area=""
       asp-controller="Blog"
       asp-action="@actionName"
       asp-route-slug="@slug"
       asp-route-k="@postQuery.KeyWord"
       asp-route-p="@(Model.PageNumber + 1)"
       asp-route-ps="@Model.PageSize"
               class="btn btn-info">
                Trang sau
            </a>
        }
        else {
            <button type="button"
                    class="btn btn-outline-secondary"
                    disabled>
                Trang sau
            </button>
        }
    </div>
}