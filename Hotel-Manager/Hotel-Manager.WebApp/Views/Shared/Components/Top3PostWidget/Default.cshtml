@model IList<Post>

<div class="mb-4">
    <h3 class="text-success mb-2">
        Top 3 khách sạn nổi bật
    </h3>
    <ul class="list-group">
        @foreach (var item in Model) {
            <li class="list-group-item">
                <a class="text-dark fw-bold text-decoration-none" asp-controller="Blog"
               asp-action="Post"
               asp-route-year="@item.PostedDate.Year"
               asp-route-month="@item.PostedDate.Month"
               asp-route-day="@item.PostedDate.Day"
               asp-route-slug="@item.UrlSlug"
                   title="@item.Title">
                    @item.Title
                    <span class="text-muted fw-normal">
                        (@item.ViewCount lượt xem)
                    </span>
                </a>
            </li>
        }
    </ul>
</div>