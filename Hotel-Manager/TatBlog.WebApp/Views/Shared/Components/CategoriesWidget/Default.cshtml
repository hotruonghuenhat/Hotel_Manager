@model IList<CategoryItem>

<div class="mb-4">
    <h3 class="text-success mb-2">
        Loại Khách Sạn
    </h3>
    <ul class="list-group">
        @foreach (var item in Model) {
            <li class="list-group-item">
                <a class="text-dark fw-bold text-decoration-none" asp-controller="Blog"
               asp-action="Category"
               asp-route-slug="@item.UrlSlug"
                   title="@item.Description">
                    @item.Name
                    <span class="text-muted fw-normal">(@item.PostCount)</span>
                </a>
            </li>
        }
    </ul>
</div>